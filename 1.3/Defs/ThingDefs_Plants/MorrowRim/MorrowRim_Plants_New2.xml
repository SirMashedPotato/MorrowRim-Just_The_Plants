<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- kreshweed -->

	<ThingDef ParentName="PlantBase">
		<defName>MorrowRim_Kreshweed</defName>
		<label>kreshweed plant</label>
		<description>A coarse grass, found natively in the ashlands. Kreshweed is farmed by the Dunmer for its durable fiber, which is often used to make clothing.</description>
		<neverMultiSelect>true</neverMultiSelect>
		<statBases>
		  <MaxHitPoints>100</MaxHitPoints>
		  <Nutrition>0.3</Nutrition>
		</statBases>
		<graphicData>
		  <texPath>MorrowRim/Plants/MorrowRim_Kreshweed</texPath>
		  <graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<selectable>true</selectable>
		<pathCost>10</pathCost>
		<ingestible />
		<plant>
		  <fertilitySensitivity>0.5</fertilitySensitivity>
		  <growOptimalGlow>1</growOptimalGlow>
		  <dieIfLeafless>true</dieIfLeafless>
		  <harvestTag>Standard</harvestTag>
		  <harvestedThingDef>MorrowRim_KreshFiber</harvestedThingDef>
		  <harvestYield>14</harvestYield>
		  <sowTags>
			<li>Ground</li>
			<li>Hydroponic</li>
		  </sowTags>
		  <sowMinSkill>4</sowMinSkill>
		  <sowResearchPrerequisites>
				<li>MorrowRim_AshSowing</li>
		  </sowResearchPrerequisites>
		  <topWindExposure>0.1</topWindExposure>
		  <neverBlightable>true</neverBlightable>
		  <growDays>12</growDays>
		  <visualSizeRange>0.6~1.3</visualSizeRange>
		  <wildOrder>2</wildOrder>
		  <immatureGraphicPath>MorrowRim/Plants_Immature/MorrowRim_KreshweedImmature</immatureGraphicPath>
		</plant>
	</ThingDef>

	<!-- flowers -->

	<ThingDef ParentName="PlantBase">
		<defName>Plant_NobleSedge</defName>
		<label>noble sedge</label>
		<description>A cultivated flower associated with royalty. Noble sedge are very beautiful, but must be replanted often.</description>
		<statBases>
		  <MaxHitPoints>85</MaxHitPoints>
		  <Beauty>24</Beauty>
		  <BeautyOutdoors>24</BeautyOutdoors>
		  <Nutrition>0.05</Nutrition>
		</statBases>
		<graphicData>
		  <texPath>MorrowRim/Plants/MorrowRim_NobleSedge</texPath>
		  <graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<altitudeLayer>Item</altitudeLayer>
		<selectable>true</selectable>
		<ingestible />
		<plant>
		  <sowResearchPrerequisites>
			<li>MorrowRim_ExoticFlowers</li>
		  </sowResearchPrerequisites>
		  <dieIfLeafless>true</dieIfLeafless>
		  <sowWork>500</sowWork>
		  <sowTags>
			<li>Ground</li>
			<li>Decorative</li>
		  </sowTags>
		  <growMinGlow>0.3</growMinGlow>
		  <topWindExposure>0.1</topWindExposure>
		  <growDays>1.2</growDays>
		  <lifespanDaysPerGrowDays>3</lifespanDaysPerGrowDays>
		  <visualSizeRange>0.3~0.8</visualSizeRange>
		  <wildOrder>1</wildOrder>
		  <purpose>Beauty</purpose>
		</plant>
	</ThingDef>
  
