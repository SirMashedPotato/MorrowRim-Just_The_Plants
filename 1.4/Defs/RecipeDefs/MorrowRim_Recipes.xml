<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- Muck to medicine -->
	
	<RecipeDef>
		<defName>MorrowRim_MakeMedicince_FromMuck</defName>
		<label>refine muck</label>
		<description>Refines 20 buckets of muck into 2 herbal medicine.</description>
		<jobString>Refining herbal medicine from muck.</jobString>
		<effectWorking>Cremate</effectWorking>
		<soundWorking>Recipe_Cremate</soundWorking>
		<workAmount>500</workAmount>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<recipeUsers>
			<li>CraftingSpot</li>
			<li>DrugLab</li>
		</recipeUsers>
		<ingredients>
		  <li>
			<filter>
			  <thingDefs>
				<li>MorrowRim_Muck</li>
			  </thingDefs>
			</filter>
			<count>20</count>
		  </li>
		</ingredients>
		<fixedIngredientFilter>
		  <thingDefs>
			<li>MorrowRim_Muck</li>
		  </thingDefs>
		</fixedIngredientFilter>
		<products>
		  <MedicineHerbal>2</MedicineHerbal>
		</products>
		<researchPrerequisite>MorrowRim_MuckRefining_Wasteful</researchPrerequisite>
		<workSkill>Medicine</workSkill>
	</RecipeDef>

	<RecipeDef>
		<defName>MorrowRim_MakeMedicince_FromMuckInefficient</defName>
		<label>refine muck using jelly or resin</label>
		<description>Refines 20 buckets of muck using 10 jelly or resin, into 4 herbal medicine.</description>
		<jobString>Refining herbal medicine from muck.</jobString>
		<effectWorking>Cremate</effectWorking>
		<soundWorking>Recipe_Cremate</soundWorking>
		<workAmount>500</workAmount>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<recipeUsers>
			<li>DrugLab</li>
		</recipeUsers>
		<ingredients>
		  <li>
			<filter>
			  <thingDefs>
				<li>MorrowRim_Muck</li>
			  </thingDefs>
			</filter>
			<count>20</count>
		  </li>
		  <li>
			<filter>
			  <thingDefs>
				<li>InsectJelly</li>
				<li MayRequire="SirMashedPotato.MorrowRim.JustTheAnimals">MorrowRim_ScribJelly</li>
				<li MayRequire="SirMashedPotato.MorrowRim.JustTheAnimals">MorrowRim_AshHopperJelly</li>
				<li MayRequire="SirMashedPotato.MorrowRim.JustTheAnimals">MorrowRim_NetchJelly</li>
				<!--<li MayRequire="SirMashedPotato.MorrowRim.AshSwamp">MorrowRim_SwampJellyEdible</li>-->
				<li MayRequire="SirMashedPotato.MorrowRim.JustTheAnimals">MorrowRim_ShalkResin</li>
			  </thingDefs>
			</filter>
			<count>10</count>
		  </li>
		</ingredients>
		<fixedIngredientFilter>
		  <thingDefs>
			<li>InsectJelly</li>
			<li>MorrowRim_Muck</li>
			<li MayRequire="SirMashedPotato.MorrowRim.JustTheAnimals">MorrowRim_ScribJelly</li>
			<li MayRequire="SirMashedPotato.MorrowRim.JustTheAnimals">MorrowRim_AshHopperJelly</li>
			<li MayRequire="SirMashedPotato.MorrowRim.JustTheAnimals">MorrowRim_NetchJelly</li>
			<!--<li MayRequire="SirMashedPotato.MorrowRim.AshSwamp">MorrowRim_SwampJellyEdible</li>-->
			<li MayRequire="SirMashedPotato.MorrowRim.JustTheAnimals">MorrowRim_ShalkResin</li>
		  </thingDefs>
		</fixedIngredientFilter>
		<products>
		  <MedicineHerbal>4</MedicineHerbal>
		</products>
		<researchPrerequisite>MorrowRim_MuckRefining_Inefficient</researchPrerequisite>
		<workSkill>Medicine</workSkill>
	</RecipeDef>
	
