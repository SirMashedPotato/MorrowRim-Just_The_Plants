<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- New wild and cultivated flowers -->
	
	<!-- cultivated stone flower -->
	
	<ThingDef ParentName="PlantBase">
		<defName>MorrowRim_StoneFlowerCultivated</defName>
		<label>stoneflower</label>
		<description>A beautiful flower, that can sometimes be found growing in the ashlands.</description>
		<statBases>
		  <MaxHitPoints>85</MaxHitPoints>
		  <Beauty>10</Beauty>
		  <BeautyOutdoors>10</BeautyOutdoors>
		  <Nutrition>0.05</Nutrition>
		</statBases>
		<graphicData>
		  <texPath>MorrowRim/Plants/MorrowRim_StoneFlower</texPath>
		  <graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<altitudeLayer>Item</altitudeLayer>
		<selectable>true</selectable>
		<ingestible />
		<plant>
		  <sowResearchPrerequisites>
			<li>MorrowRim_AshSowing</li>
		  </sowResearchPrerequisites>
		  <dieIfLeafless>true</dieIfLeafless>
		  <sowWork>750</sowWork>
		  <sowTags>
			<li>Ground</li>
			<li>Decorative</li>
		  </sowTags>
		  <growMinGlow>0.3</growMinGlow>
		  <topWindExposure>0.1</topWindExposure>
		  <growDays>1.5</growDays>
		  <lifespanDaysPerGrowDays>5</lifespanDaysPerGrowDays>
		  <visualSizeRange>0.3~0.8</visualSizeRange>
		  <wildOrder>1</wildOrder>
		  <purpose>Beauty</purpose>
		</plant>
	</ThingDef>
	
